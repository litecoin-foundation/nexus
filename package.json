  "name": "nexus",
  "version": "1.0.5",
  "description": "Mobile Litecoin wallet built with React-Native + Redux",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/litecoin-foundation/nexus.git"
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "reset": "rm -rf node_modules/ && npm cache clear -f && rm -rf android/.gradle && rm -rf android/build && find . name '.cxx' -type d -exec rm -rf {} + 2>/dev/null || true && yarn",
    "fetch:ios": "curl https://static.nexuswallet.com/lndmobile/lndmobile-ios-v0.17.3-cshared.tar.gz --output lndmobile-ios-v0.17.3-cshared.tar.gz && npm run extract:ios",
    "extract:ios": "tar xzvf lndmobile-ios-v0.17.3-cshared.tar.gz ./ios/liblnd-fat.a && mv ./ios/liblnd-fat.a ./ios/liblnd.a",
    "fetch:android": "curl https://static.nexuswallet.com/lndmobile/lndmobile-android-v0.17.3-cshared.tar.gz --output lndmobile-android-v0.17.3-cshared.tar.gz && npm run extract:android",
    "extract:android": "mkdir -p ./android/app/src/main/jniLibs && tar xzvf lndmobile-android-v0.17.3-cshared.tar.gz --strip-components=1 -C ./android/app/src/main/jniLibs",
    "postinstall": "bunx patch-package",
    "generate-protos": "@bufbuild/buf generate",
    "pods": "cd ios && RCT_NEW_ARCH_ENABLED=1 pod install",
    "storybook-generate": "sb-rn-get-stories",
    "prepare": "husky"
  },
