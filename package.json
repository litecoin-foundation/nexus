{
  "name": "plasma",
  "version": "0.0.1",
  "description": "Mobile Bitcoin & Litecoin lightning wallet built with React-Native + Redux",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/litecoin-foundation/plasma.git"
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "postinstall": "npm run protobuf && npx jetify",
    "protobuf": "pbjs -t static-module -w es6  --force-long -o src/lib/lightning/rpc.js src/lib/lightning/proto/rpc.proto src/lib/lightning/proto/walletunlocker.proto src/lib/lightning/proto/autopilot.proto src/lib/lightning/proto/walletkit.proto src/lib/lightning/proto/signer.proto src/lib/lightning/proto/router.proto src/lib/lightning/proto/invoices.proto src/lib/lightning/proto/watchtower.proto src/lib/lightning/proto/wtclient.proto",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "storybook": "start-storybook -p 7007",
    "prestorybook": "rnstl"
  },
  "dependencies": {
    "@react-native-community/clipboard": "^1.5.1",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-native-community/netinfo": "^6.0.2",
    "@react-native-community/segmented-control": "^2.2.2",
    "@react-native-community/slider": "^3.0.3",
    "@react-navigation/bottom-tabs": "^6.0.7",
    "@react-navigation/elements": "^1.1.2",
    "@react-navigation/native": "^6.0.4",
    "@react-navigation/stack": "^6.0.9",
    "@react-spring/native": "^9.2.4",
    "axios": "^0.22.0",
    "base-x": "^3.0.8",
    "base64-js": "^1.5.1",
    "bech32": "^2.0.0",
    "bip21": "^2.0.3",
