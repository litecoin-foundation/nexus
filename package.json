    "d3-shape": "^3.0.1",
    "events": "^3.3.0",
    "hash.js": "^1.1.7",
    "leven": "^4.0.0",
    "lodash.memoize": "^4.1.2",
    "prop-types": "^15.7.2",
    "protobufjs": "^6.11.2",
    "react": "17.0.2",
    "react-native": "0.67.3",
    "react-native-camera": "^4.2.1",
    "react-native-device-info": "^8.3.3",
    "react-native-fs": "^2.18.0",
