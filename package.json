    "reset": "rm -rf node_modules/ && npm cache clear && watchman watch-del-all && bun install",
    "test": "jest",
    "fetch:ios": "curl https://api.getplasma.org/files/lnd/lndmobile-ios-v0.17.3.tar.gz --output lndmobile-ios-v0.17.3.tar.gz && bun run extract:ios",
